.footer
  background: #293542
  color: #ffffff

  &__content
    width: 100%
    border-top: 1px solid rgba(#fff, .1)
    padding: 44px 0 35px
    display: flex
    align-items: center
    position: relative

    @media (max-width: $breakpoint-sm - 1)
      flex-direction: column
      padding: 22px 0 15px

  &__logo
    background: url(../../img/sprite-logo-white.svg)
    margin-bottom: 11px

    @media (max-width: $breakpoint-sm - 1)
      margin: 0 auto 11px

  &__copyright
    font-size: 12px
    line-height: 1.3
    opacity: .3
    padding-left: 68px

    @media (max-width: $breakpoint-sm - 1)
      text-align: center
      padding-left: 0
      margin-bottom: 12px

  &__contacts
    flex: 1
    text-align: right

    @media (max-width: $breakpoint-sm - 1)
      text-align: center

  &__phone
    font-size: 30px
    font-weight: 500
    margin-bottom: 12px

  &__cta
    font-size: 13px
    margin-bottom: 8px

  &__works
    font-size: 13px
    opacity: .3

  &__top
    position: absolute
    background: url(../../img/sprite-arrow.svg)
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    cursor: pointer
    opacity: .8
    anim()

    &:hover
      opacity: 1