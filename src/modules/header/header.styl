.header
  margin-bottom: 40px

  .w
    align-items: center

  &__image
    flex-shrink: 0
    max-width: 40%

    @media (max-width: $breakpoint-sm - 1)
      height: 200px

    img
      max-height: 100%

  &__content
    margin-left: 20px
    margin-top: 20px

    @media (max-width: $breakpoint-sm - 1)
      text-align: center
      margin: 0px 10px

      br
        display: none

  &__subtitle
    font-weight: 300
    font-size: 23px
    margin-bottom: 40px
    line-height: 1.3

  &__title
    margin: 0
    padding: 0
    font-weight: 300
    font-size: 33px
    margin-bottom: 35px
    line-height: 1.2
    text-transform: uppercase

    span
      font-weight: bold
      color: #E94C36

  &__subtext
    font-size: 21px

  &__text
    color: #666666
    font-size: 16px
    line-height: 1.8

    p
      margin: 10px 0 0
