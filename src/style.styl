@import "ion-rangeslider/css/ion.rangeSlider.css";
@import "magnific-popup/dist/magnific-popup.css"
@import "stylus/_vars.styl";
@import "stylus/_mixins.styl";
@import "stylus/_grid.styl";

html
  margin: 0
  padding: 0
  font-family: 'Ubuntu', sans-serif
  font-size: $font-size
  line-height: $line-height
  min-height: 100%
  display: flex

body
  margin: 0
  padding: 0
  background-size: cover
  -webkit-font-smoothing: antialiased
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%
  position: relative
  width: 100%

*, *:before, *:after
  box-sizing: border-box

img
  max-width: 100%
  height: auto

a
  color: inherit
  text-decoration: none

button
  color: inherit

.screen-reader-response
  display: none

.wpcf7-not-valid-tip
  position: absolute
  top: 100%
  left: 0
  font-size: 12px
  color: #e94c36

.wpcf7-response-output
  position: absolute
  font-size: 14px
  bottom: 0
  text-align: center

