.form
  position: relative
  z-index: 1
  &__content
    text-align: center
    background: #c4ced5
    border-radius: 3px
    flex-direction: column
    margin-bottom: 60px
    padding: 40px 10px 36px
    box-shadow: 0px 19px 25px -10px rgba(0,0,0,0.6)

    @media (max-width: $breakpoint-sm - 1)
      border-radius: 0

  &__title
    font-size: 30px
    font-weight: 300
    margin-bottom: 37px
    padding-left: 136px
    padding-right: 136px

    @media (max-width: $breakpoint-sm - 1)
      font-size: 21px

    span
      font-weight: 500
      color: #e94c36

  &__items
    max-width: 880px
    width: 100%
    margin: 0 auto
    display: flex
    justify-content: space-between

    @media (max-width: $breakpoint-sm - 1)
      flex-direction: column

  &__input
    width: 255px

    @media (min-width: $breakpoint-sm - 1) and (max-width: $breakpoint-md - 1)
      margin-right: 10px


    @media (max-width: $breakpoint-sm - 1)
      width: auto
      margin-bottom: 15px

    input
      width: 100%
      border: 0
      margin: 0
      padding: 0 19px
      height: 73px
      font-size: 16px
      line-height: 1.2
      outline: 0
      border-radius: 5px

  &__button
    flex-basis: content